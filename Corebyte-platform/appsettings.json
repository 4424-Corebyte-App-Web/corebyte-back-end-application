{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "TokenSettings": {
    "Secret": "your-32-character-secure-key-123456789012",
    "Issuer": "corebyte-platform",
    "Audience": "corebyte-platform-users",
    "ExpirationInMinutes": 1440
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=${MYSQL_HOST};Port=3306;Database=${MYSQL_DATABASE};User=${MYSQL_USER};Password=${MYSQL_PASSWORD};"
  }
}
